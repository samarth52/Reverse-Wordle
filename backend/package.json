{
  "name": "backend",
  "version": "1.0.0",
  "description": "backend for the Reverse-Wordle app",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "main": "nodemon wordleFunctions/main.js",
    "test": "jest --verbose --runInBand",
    "build:ui": "shx rm -rf build && cd ../frontend && npm run build && shx cp -r build ../backend",
    "deploy": "cd .. && git subtree push --prefix backend heroku main",
    "deploy:full": "npm run build:ui && git add . && git commit -m uibuild && npm run deploy",
    "logs:prod": "heroku logs --tail"
  },
  "author": "Samarth Chandna",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^8.21.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.26.0",
    "jest": "^28.1.3",
    "nodemon": "^2.0.19"
  },
  "dependencies": {
    "axios": "^0.27.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "shx": "^0.3.4"
  }
}
